import java.util.Arrays;
import java.util.Scanner;

class Main{
    public static void main(String[] args) {
    //Step output
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        for(int i = 0;i<n;i++){
            for(int j = i;j<n;j++){
                System.out.print("\t");
            }

            for(int k = 0;k<=i;k++){
                System.out.print("CSBS\t");
            }
            System.out.println();
        }
    }
}
