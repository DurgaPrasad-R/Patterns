import java.util.Arrays;
import java.util.Scanner;

class Main{
//    Odd number pattern
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        for(int i = 1;i<=n;i++){
            for(int j = i;j<=n;j++){
                System.out.print(" ");
            }

            for(int k = 1;k<=i;k++){
                System.out.print((2*k-1)+" ");
            }
            System.out.println();
        }
    }
}
