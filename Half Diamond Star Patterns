import java.util.Scanner;

class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        for(int i = 0;i<2*n;i++){
            int p = i;
            if(i>n)
                p = 2*n-i;

            for(int k = 0;k<p;k++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
